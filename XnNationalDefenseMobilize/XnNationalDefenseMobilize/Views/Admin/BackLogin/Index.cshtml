@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>管理员登陆</title>

    <link rel="stylesheet" href ="@Url.Content("~/content/bootstrap.min.css")">
    <link rel="stylesheet" href ="@Url.Content("~/content/pagecss/backPageCss/style.css")">
    <link rel="stylesheet" href ="@Url.Content("~/content/pagecss/backPageCss/backLoginCss/backLogin.css")">
</head>
<body style="background-color:black">

    <div class="logo">
        <img src="@Url.Content("~/Image/back/logo.png")"/>
    </div>

    <div class="login" style="text-align:center">
        <div class="login_img">
            <img src="@Url.Content("~/Image/back/login_icon.png")" width=240; height=240 />
        </div>

        <div class="loginForm">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">管理员登陆</div>
                <div class="panel-body">
                    <form role="form" action="@Url.Content("~/BackLogin/Login")" method="post">
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" name="username" type="text" autofocus="">
                            </div>
                            <div class="form-group">
                                <input class="form-control" name="password" type="password">
                            </div>
                           

                            <div class="form-group">
                                <table>
                                    <tr>
                                        <td>
                                            <input class="form-control" name="verifyCode" type="text" style="width:150px;">
                                        </td>
                                        <td>
                                            <img onclick="getVerifyCode();" id="verifyCode" src="@Url.Content("~/BackLogin/GetVerifyCode")" style="border:solid 1px;width:100px;height:40px;margin-left:20px;" alt="验证码"/>
                                        </td>
                                    </tr>
                                </table>
                               
                            </div>


                            <center>
                                 <input type="submit" class="btn btn-primary" value="登陆"/>
                                 <input type="reset" class="btn btn-primary"  value="重置"/>
                            </center>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
