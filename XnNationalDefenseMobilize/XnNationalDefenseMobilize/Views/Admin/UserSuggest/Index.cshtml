@{
    ViewBag.Title = "用户建议";
    Layout = "~/Views/Shared/_backLayout.cshtml";
}
@using XnNationalDefenseMobilize.Models.Master
@using XnNationalDefenseMobilize.Models.utility
@model  MulltiPageDisplayContrler
@{   
    List<Suggest> curr_page_data = (List<Suggest>)Model.curr_page_data;
}

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <ol class="breadcrumb">
            <li class="active">用户建议</li>
        </ol>
    </div>

    <form class="search_form">
        <table>
            <tr>
                <td>
                    <input type="button" class="btn btn-primary" value="搜索" id="search" />
                </td>
                <td>
                    <div class="form-group" style="margin: 0;">
                        <input class="form-control" id="s_text">
                    </div>
                </td>
                <td>
                    <div class="form-group" style="margin: 0;">
                        <select class="form-control" id="s_type">
                            <option value="by_name">按姓名</option>
                            <option value="by_phone">按电话</option>
                        </select>
                    </div>
                </td>
                <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                <td>&nbsp;&nbsp;&nbsp;&nbsp;</td>
                <td>
                    <input type="button" class="btn btn-primary" value="删除所选" id="delete_selected" />
                </td>
                <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
                <td>
                    <input type="button" class="btn btn-primary" value="全选" id="select_all" />
                </td>
                <td>&nbsp;&nbsp;&nbsp;&nbsp;</td>
                <td>
                    <input type="button" class="btn btn-primary" value="反选" id="reverse_select" />
                </td>
                <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
                <td>
                    <input type="button" class="btn btn-primary" value="刷新" onclick="refresh()" />
                </td>
            </tr>
        </table>
    </form>
    <form id="selectedForm">
        <table data-toggle="table">
            <thead>
                <tr>
                    <th>选择</th>
                    <th>ID</th>
                    <th>邮箱</th>
                    <th>电话</th>
                    <th>内容</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @{
                    Suggest[] suggestes = curr_page_data.ToArray();
                    for (int i = 0; i < suggestes.Length;i++ )
                    {
                        <tr>
                            <td>
                                <div class="checkbox">
                                    <label>
                                        <input name="checkbox" type="checkbox" value="001">
                                    </label>
                                </div>
                            </td>
                            <td>@suggestes[i].suggest_id</td>
                            <td>@suggestes[i].suggest_email</td>
                            <td>@suggestes[i].suggest_phone</td>
                            <td>@suggestes[i].suggest_content</td>
                            <td>
                                <a onclick="Delete()" id="001">删除</a>
                            </td>
                        </tr>
                    }
                 }
            </tbody>
        </table>
    </form>
    @{
        int prePageId = (Model.curr_page_index > 1) ? Model.curr_page_index - 1 : 1;
        int nextPageId = (Model.curr_page_index < Model.count_pages) ? Model.curr_page_index + 1 : Model.count_pages;
    }

    <div style="text-align: center">
        <div class="pagination">
            <a href="@Url.Content("~/UserSuggest/Index?page_id=1")" class="navlinks">首页</a>
            <a href="@Url.Content("~/UserSuggest/Index?page_id=" + prePageId)" class="navlinks">&lt;上一页</a>

            @for (int i = Model.start_page_index; i <= Model.end_page_index; i++)
            {
                <a id="@i" href="@Url.Content("~/UserSuggest/Index?page_id=" + i)" class="navlinks">@i</a>
            }

            <a href="@Url.Content("~/UserSuggest/Index?page_id=" + nextPageId)" class="navlinks">下一页 ></a>
            <a href="@Url.Content("~/UserSuggest/Index?page_id=" + Model.count_pages)" class="navlinks">末页</a>
        </div>
    </div>

    <script type="text/javascript">
        var id_name = "@Model.curr_page_index.ToString()";
        document.getElementById(id_name).className = "navlinks current";
    </script>
</div>
<script>
    //全选
    jQuery("#select_all").click(function () {
        var checkboxes = jQuery("input[name='checkbox']");
        for (var i=0;i<checkboxes.length;i++) {
            checkboxes[i].checked = true;
        }
    });

    //反选
    jQuery("#reverse_select").click(function () {
        var checkboxes = jQuery("input[name='checkbox']");
        for (var i = 0; i < checkboxes.length; i++) {
            if (checkboxes[i].checked) {
                checkboxes[i].checked = false;
            } else {
                checkboxes[i].checked = true;
            }
        }
    });

    //刷新
    function refresh() {
        jQuery.ajax({
            url: "@Url.Content("~/UserSuggest/Refresh")",
            dataType: "text",
            type: "GET",
            success: function (data) {
                alert(data);
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) {
                alert(XMLHttpRequest.responseText);
            }
        });
    }

    //搜索


    //删除
    function Delete(id) {
        jQuery.ajax({
            url: "@Url.Content("~/UserSuggest/Delete")",
            dataType: "text",
            type: "POST",
            data: "id=" + id,
            success: function (data) {
                alert(data);
                refresh();
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) {
                alert(XMLHttpRequest.responseText);
            }
        });
    }

    //批量删除
    jQuery("#delete_selected").click(function () {
        var n = jQuery("input[name='checkbox']:checked").length;
        if (n == 0) {
            alert("请至少选择一条");
        }
        else {
            var data = jQuery("#selectedForm").serialize();
            jQuery.ajax({
                url: "@Url.Content("~/UserSuggest/DeleteMore")",
                dataType: "text",
                type: "POST",
                data: data,
                success: function (data) {
                    alert(data);
                    refresh();
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    alert(XMLHttpRequest.responseText);
                }
            });
        }
    });

    //搜索
    jQuery("#search").click(function () {
        var s_type = jQuery("#s_type").val();
        var s_text = jQuery("#s_text").val();;
        if (s_text.length <= 0) {
            alert("请输入查询条件");
            return;
        }
        jQuery.ajax({
            url: "@Url.Content("~/UserSuggest/Search")",
            data: "s_type=" + s_type + "&s_text=" + s_text,
            type: "POST",
            dataType: "text",
            success: function (data) {
                alert(data);
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) {
                alert(XMLHttpRequest.responseText);
            }
        });
    });
</script>