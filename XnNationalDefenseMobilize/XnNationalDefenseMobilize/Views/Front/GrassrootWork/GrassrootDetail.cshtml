@model  XnNationalDefenseMobilize.Models.GrassrootWork.GrassrootNews
@{
    ViewBag.Title = Model.disTrict.district_name;
}

<link href="@Url.Content("~/Content/pagecss//frontpagecss/newscss/newsdetail.css")" rel="stylesheet" type="text/css" media="all" />
<link href="@Url.Content("~/Content/pagecss//frontpagecss/newscss/newsdetailred.css")" rel="stylesheet" type="text/css" media="all" />


<div id="outer_wrapper">
    <div id="contentsec">
        <div class="inner" id="grnews_detail_container">
            <div class="twothird left" style="width:100%">
                <div class="twothird box left" style="width:100%">
                    <h2 class="widget-head-border colr"><b>@Model.grassrootNews_title</b></h2>               
                    <div style="margin-left:25px; font-size:16px">                             
                          <span class="postby">供稿：<span style="color:#666">@Model.grassrootNews_source</span>&nbsp;&nbsp;</span>
                          <span class="postby">编辑：<span style="color:#666">@Model.grassrootNews_author</span>&nbsp;&nbsp;</span>
                          <span class="post-time">发布时间：<span style="color:#666">@Model.grassrootNews_release_time.ToString("yyyy-MM-dd hh:mm")&nbsp;&nbsp;</span></span>
                    </div>
                    <hr style="margin-left:25px; border:1px solid #46586A" />
                    <div class="blog">
                        <div class="post">
                            <div class="p-date">
                                <span>@Model.grassrootNews_release_time.ToString("dd")</span>
                                <span>@Model.grassrootNews_release_time.ToString("yyyy.MM")</span>
                            </div>
                            <div class="post-sec">
                                <div class="post-desc">
                                    @Html.Raw(Model.grassrootNews_content)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

