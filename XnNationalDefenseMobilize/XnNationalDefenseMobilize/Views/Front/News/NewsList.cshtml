@{
    ViewBag.Title = "新闻聚焦";
}
@using XnNationalDefenseMobilize.Models.News
@model  IEnumerable<NewsInfo>

<link href='http://fonts.useso.com/css?family=Open+Sans:300,400,600,700' rel='stylesheet' type='text/css'>
<link href='http://fonts.useso.com/css?family=Fjalla+One|Archivo+Narrow|Oswald:400,700' rel='stylesheet' type='text/css'>
<link href="@Url.Content("~/Content/pagecss//frontpagecss/defensecss/reset.css")" rel="stylesheet" type="text/css" media="all" />
<link href="@Url.Content("~/Content/pagecss//frontpagecss/defensecss/style.css")" rel="stylesheet" type="text/css" media="all" />

<div class="site_wrapper">
    <div class="page_title">

        <div class="container">
            
            <div class="leaft_title">
                <h1 style="float:left;font-size:20px">新闻聚焦  >>  国际新闻</h1>
                <div class="site-search-area" style="float:right">
                <form method="get" id="site-searchform" action="Index">
                    <div>
                        <input class="input-text" name="s" id="s"  type="text" />
                        <input id="searchsubmit" style="color:white; font-size:14px; font-weight:bold" value="搜索" type="submit" />
                    </div>
                </form>
            </div>
            </div>
            
            <!--<div class="reght_pagenation"><a href="index.html">Home</a> <i>/</i>  <i>/</i> with Small image</div>-->
        </div>

    </div>
    <!-- end page title -->

    <div class="clearfix"></div>

    <div class="container" >

        <div class="content_left">
           @{  
                
             NewsInfo[] NewsInfoArray = Model.ToArray();
             for(int i = 0; i < 10; i+=2){
            <div class="blog_post" style="margin-bottom:20px; padding-bottom:20px; border-bottom:1px solid #ddd">
                <div class="blog_postcontent">

                    <div class="post_info_content_small">
                        <a href="blog-archive.html" class="date"><strong>@(18-i)</strong><i>2016.08</i></a>
                        <h3><a href="@Url.Content("~/News/NewsDetail?id=3")"><b>@NewsInfoArray[i].news_title</b> </a></h3>
                        <div class="clearfix"></div>

                        <p>@NewsInfoArray[i].news_abstract</p>

                    </div>

                    <div class="post_info_content_small">
                        <a href="@Url.Content("~/News/NewsDetail?id=3")" class="date"><strong>@(18-i)</strong><i>2016.08</i></a>
                        <h3><a href="@Url.Content("~/News/NewsDetail?id=3")"><b>@NewsInfoArray[i+1].news_title</b></a></h3>
                        <div class="clearfix"></div>

                        <p>@NewsInfoArray[i+1].news_abstract</p>

                    </div>
                </div>
            </div>
            }
            }
            <!-- /# end post -->

            <!--
            <div class="clearfix divider_line3"></div>
            -->

            <div style="text-align:center">
            <div class="pagination">
                <a href="#" class="navlinks">&lt;上一页</a>
                <a href="#" class="navlinks">1</a>
                <a href="#" class="navlinks current">2</a>
                <a href="#" class="navlinks">3</a>
                <a href="#" class="navlinks">4</a>
                <a href="#" class="navlinks">5</a>
                <a href="#" class="navlinks">6</a>
                <a href="#" class="navlinks">下一页 ></a>
            </div>
                </div>
            <!-- end pagination -->

        </div>
        <!-- end content left area -->
    </div>
    <div class="clearfix"></div>
</div>
