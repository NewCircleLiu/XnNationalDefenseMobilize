@{
    ViewBag.Title = "政策咨询";
}

@using XnNationalDefenseMobilize.Models.PolycyAdvice
@using XnNationalDefenseMobilize.Models.utility
@model  MulltiPageDisplayContrler

@{   
    List<CommonQues> curr_page_data = (List<CommonQues>)Model.curr_page_data;
}

<link href="@Url.Content("~/Content/pagecss/frontpagecss/polycyadvicecss/polycyadvice.css")" rel="stylesheet" type="text/css" media="all" />


<div id="outer_wrapper">
    <div id="contentsec">
        <div class="inner" id="advise_container">
            <div class="twothird left">
                <div class="twothird box left">
                    <div class="blog" style="min-height: 600px">
                        <div class="post">
                            <!--
                            <div class="p-date">
                                <p>政策咨询</p>
                                <p><a id="Index" href = "@Url.Content("~/PolicyAdvice/Index")">常见问题</a></p>
                                <p><a id="Reply" href = "@Url.Content("~/PolicyAdvice/Reply")">留言答复</a></p>
                                <p><a id="Quiz"  href = "@Url.Content("~/PolicyAdvice/Quiz")">我要提问</a></p>
                            </div>
                            -->
                            <div class="navbar-collapse" style="padding-right:0">
                                <ul class="nav navbar-nav" id="navi_ul" style="background-color: #D34346; float:none;margin: 0; width:100%">
                                    <li style="float:left"><a style="border:none" href="@Url.Content("~/PolicyAdvice/Index")">常见问题</a></li>
                                    <li style="float:left"><a style="border:none" href="@Url.Content("~/PolicyAdvice/Reply")">留言答复</a></li>
                                    <li style="float:left"><a style="border:none" href="@Url.Content("~/PolicyAdvice/Quiz")">我要提问</a></li>
                                </ul>
                            </div>

                            <script type="text/javascript">
                                var id_name = "@ViewContext.RouteData.Values["action"].ToString()";
                                document.getElementById(id_name).innerText = "· " + document.getElementById(id_name).innerText + " ·";
                            </script>
                            <div class="post-sec">
                                <div class="post-desc">
                                    <div id="right_title">
                                      <!--  常见问题 -->
                                    </div>
                                </div>

                                <ul id="right_list" style="font-size: 16px">
                                    @{ CommonQues[] commonQuesArray = curr_page_data.ToArray();}
                                    @for (int i = 0; i < curr_page_data.Count(); i++)
                                    {
                                        <li style="line-height:2.5em; border-bottom:1px solid #ebebeb; font-family: 'sans-serif', '\5FAE\8F6F\96C5\9ED1';">
                                            <a href="@Url.Content("~/PolicyAdvice/CommonQuesDetail?id=" + commonQuesArray[i].question_id)" target="_blank">
                                            <span>@commonQuesArray[i].question_content</span>@commonQuesArray[i].question_id<p>@commonQuesArray[i].question_release_time.ToString("yyyy-MM-dd")</p>
                                        </a>
                                        </li>
                                    }

                                </ul>

                                @{
                                    int prePageId = (Model.curr_page_index > 1) ? Model.curr_page_index - 1 : 1;
                                    int nextPageId = (Model.curr_page_index < Model.count_pages) ? Model.curr_page_index + 1 : Model.count_pages;
                                }

                                <div style="text-align: center">
                                    <div class="pagination">
                                        <a href="@Url.Content("~/PolicyAdvice/Index?page_id=1")" class="navlinks">首页</a>
                                        <a href="@Url.Content("~/PolicyAdvice/Index?page_id=" + prePageId)" class="navlinks">&lt;上一页</a>

                                        @for (int i = Model.start_page_index; i <= Model.end_page_index; i++)
                                        {
                                            <a id="@i" href="@Url.Content("~/PolicyAdvice/Index?page_id=" + i)" class="navlinks">@i</a>
                                        }

                                        <a href="@Url.Content("~/PolicyAdvice/Index?page_id=" + nextPageId)" class="navlinks">下一页 ></a>
                                        <a href="@Url.Content("~/PolicyAdvice/Index?page_id=" + Model.count_pages)" class="navlinks">末页</a>
                                    </div>
                                </div>

                                <script type="text/javascript">
                                    var id_name = "@Model.curr_page_index.ToString()";
                                    document.getElementById(id_name).className = "navlinks current";
                                </script>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div style="clear: both; width: 0; height: 0"></div>
    </div>
</div>

