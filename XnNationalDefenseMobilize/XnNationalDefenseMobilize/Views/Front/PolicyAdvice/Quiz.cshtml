@{
    ViewBag.Title = "我要提问";
}

<link href="@Url.Content("~/Content/pagecss/frontpagecss/polycyadvicecss/polycyadvice.css")" rel="stylesheet" type="text/css" media="all" />


<!-- Wrapper Start -->
<div id="outer_wrapper">
    <!-- Content Section Start -->
    <div id="contentsec">
        <div class="inner">
            <div class="twothird left">
                <!-- Two Third Box Start -->
                <div class="twothird box left">
                    <div class="blog">
                        <!-- Blog Post Start -->
                        <div class="post">
                            <div class="p-date">
                                <p>政策咨询</p>
                                <p><a id="Index" href = "@Url.Content("~/PolicyAdvice/Index")">常见问题</a></p>
                                <p><a id="Reply" href = "@Url.Content("~/PolicyAdvice/Reply")">留言答复</a></p>
                                <p><a id="Quiz" href = "@Url.Content("~/PolicyAdvice/Quiz")">我要提问</a></p>
                            </div>
                            <script type="text/javascript">
                                var id_name = "@ViewContext.RouteData.Values["action"].ToString()";
                                document.getElementById(id_name).innerText = "· " + document.getElementById(id_name).innerText + " ·";
                            </script>
                            <div class="post-sec">
                                <div class="post-desc">
                                    <div id="right_title">
                                        我要提问
                                    </div>
                                </div>
                                <div class="quiz-form">
                                    <form>
                                        <div class="quiz-left">
                                            <input type="text" placeholder="姓名" required>
                                            <input type="text" placeholder="邮箱" required>
                                            <input type="text" placeholder="标题" required>
                                        </div>
                                        <div class="quiz-right">
                                            <textarea placeholder="请填写您的意见及建议" required></textarea>
                                        </div>
                                        <div class="clearfix"></div>
                                        <input type="submit" value="发送">
                                    </form>
                                </div>

                            </div>
                        </div>
                        <!-- Blog Post End -->
                    </div>
                </div>
                <!-- Two Third Box End -->

            </div>
            <!-- One Third Box Start -->

        </div>
    </div>
    <!-- Content Section End -->
</div>
<!-- Wrapper End -->

