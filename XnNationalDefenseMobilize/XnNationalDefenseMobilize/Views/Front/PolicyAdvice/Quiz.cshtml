@{
    ViewBag.Title = "我要提问";
}

<link href="@Url.Content("~/Content/pagecss/frontpagecss/polycyadvicecss/polycyadvice.css")" rel="stylesheet" type="text/css" media="all" />

<script type="text/javascript">
    function checkForm() {
        var title_edit = document.getElementById("title");
        var title = title_edit.value;
        if (title.trim() == "") {
            title_edit.style.border = "1px solid red ";
            return false;
        }
        else
            title_edit.style.border = "1px solid green ";

        var answer_edit = document.getElementById("answer");
        var answer = answer_edit.value;
        if (answer.trim() == "") {
            answer_edit.style.border = "1px solid red ";
            return false;
        }
        else
            answer_edit.style.border = "1px solid green ";

        document.forms[0].submit();
        return true;
    }
</script>

<div id="outer_wrapper">
    <div id="contentsec">
        <div class="inner">
            <div class="twothird left">
                <div class="twothird box left">
                    <div class="blog">
                        <div class="post">
                            <div class="p-date">
                                <p>政策咨询</p>
                                <p><a id="Index" href = "@Url.Content("~/PolicyAdvice/Index")">常见问题</a></p>
                                <p><a id="Reply" href = "@Url.Content("~/PolicyAdvice/Reply")">留言答复</a></p>
                                <p><a id="Quiz"  href = "@Url.Content("~/PolicyAdvice/Quiz")" >我要提问</a></p>
                            </div>
                            <script type="text/javascript">
                                var id_name = "@ViewContext.RouteData.Values["action"].ToString()";
                                document.getElementById(id_name).innerText = "· " + document.getElementById(id_name).innerText + " ·";
                            </script>
                            <div class="post-sec">
                                <div class="post-desc">
                                    <div id="right_title">
                                        我要提问
                                    </div>
                                </div>
                                <div class="quiz-form">
                                    <form action="~/PolicyAdvice/Quiz" method="post">
                                        <div class="quiz-left">
                                            <input id="name" name="name" type="text" placeholder="姓名">
                                            <input id="email" name="email" type="text" placeholder="邮箱">
                                            <input id="title" name="title" type="text" placeholder="标题" required>
                                        </div>
                                        <div class="quiz-right">
                                            <textarea id="answer" name="answer" placeholder="请填写您的问题" required></textarea>
                                        </div>
                                        <div class="clearfix"></div>
                                        <input type="button" onclick="checkForm()" data-toggle="modal" data-target="#myModal" value="发送">
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script type="text/javascript" src="@Url.Content("~/scripts/jquery.unobtrusive-ajax.min.js")"></script>
}

@Ajax.ActionLink("About", "About", "PolicyAdvice", null, new AjaxOptions { UpdateTargetId = "body-content",HttpMethod = "Get", }, new { })
<div id="body-content">
</div>