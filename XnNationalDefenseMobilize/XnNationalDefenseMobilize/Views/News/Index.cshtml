@{
    ViewBag.Title = "新闻聚焦";
}
<!--这是新闻聚焦页面-->
<link href="@Url.Content("~/Content/pagecss/newscss/news.css")" rel="stylesheet" type="text/css" media="all" />

@{string[] title = new string[] { "国际新闻", "国内新闻", "军事新闻", "社会新闻", "西宁新闻", "北京新闻" };}
@{string[] news = new string[] { "菲律宾总统杜特尔特：我还没蠢到要跟中国宣战", 
                                 "习近平：让“一带一路”建设造福沿线各国人民", 
                                 "中国海军舰艇编队圆满完成环太演习任务回国", 
                                 "三星和苹果厂商都在被这家中国手机抢地盘",
                                 "西宁市城中区总寨镇举办“两学一做”知识竞赛"};}

<div class="service-section">
    <div class="container">
        <div class="serve-grids wow bounceIn animated" data-wow-delay="0.4s">
            @for (int i = 0; i < 5; i++)
            {
                <div class="col-md-12 services-section-grid">
                    <div class="services-section-grid-head">
                        <div class="service-icon">
                            <i class="rocket" style="font-style: normal">
                                <span>@title[i].Substring(0,1)</span>
                                <span>@title[i].Substring(1,1)</span>
                                <span>@title[i].Substring(2,1)</span>
                                <span>@title[i].Substring(3,1)</span>
                               
                            </i>
                        </div>
                        <div class="service-icon-heading">
                            <div class="col-md-6">
                                <p>
                                     @for (int j = 0; j < 6; j++){
                                     @news[i]<br />
                                    }
                                </p>
                            </div>
                            <div class="col-md-6">
                                <p>
                                    @for (int j = 0; j < 6; j++){
                                     @news[i]<br />
                                    }
                                </p>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            }
            <div class="clearfix"></div>
        </div>
    </div>
</div>
