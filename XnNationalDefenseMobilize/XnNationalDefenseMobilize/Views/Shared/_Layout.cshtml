<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href ="@Url.Content("~/content/bootstrap.min.css")">
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")" type="text/javascript"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="@Url.Content("~/content/pagecss/layoutcss/layout.css")" rel="stylesheet" type="text/css" media="all" />
</head>
<body>
    <div id="home" class="header">
        <div class="container" style="width:100%">
            <div class="header-grid">
                <div class="logo" style="font-size:20px; color:yellow">
                    <!--
                    <a href="#">
                        <img src="images/logo.png" alt="" />
                    </a>-->
                    西宁国防动员LOGO
                </div>
                <div class="navigation">
                    <span class="menu">
                        <img src="images/menu.png" alt="" /></span>
                    <ul class="nav1">
                        <li><a class="scroll" href="#home">首页</a></li>
                        <li><a class="scroll" href="#about">新闻聚焦</a></li>
                        <li><a class="scroll" href="#services">国防动员</a></li>
                        <li><a class="scroll" href="#pricing">基层工作</a></li>
                        <li><a class="scroll" href="#contact">政策咨询</a></li>
                        <li><a class="scroll" href="#about">网站导航</a></li>
                        <li><a class="scroll" href="#services">影音天地</a></li>
                        <li><a class="scroll" href="#pricing">下载中心</a></li>
                        <li><a class="scroll" href="#contact">应用服务</a></li>
                    </ul>
                  
                </div>
            </div>
        </div>
    </div>

    @RenderBody()

    <div id="contact" class="contact" style="margin-top:5px">
        <div class="container">
            <div class="contact-form">
                <h3>联系我们</h3>

                <form>
                    <div class="contact-left">
                        <input type="text" placeholder="姓名" required>
                        <input type="text" placeholder="邮箱" required>
                        <input type="text" placeholder="联系电话" required>
                    </div>
                    <div class="contact-right">
                        <textarea placeholder="请填写您的意见及建议" required></textarea>
                    </div>
                    <div class="clearfix"></div>
                    <input type="submit" value="发送">
                </form>
            </div>
            <div class="address">
                <h3>联系方式</h3>
                <p style="font-size: 16px">
                    <label><span class="glyphicon glyphicon-map-marker"></span>&nbsp;&nbsp;&nbsp; 青海省西宁市七一路</label>
                </p>
                <ul style="font-size: 16px">
                    <li><span class="glyphicon glyphicon-earphone"></span>&nbsp;0971-6666666</li>
                    <li><span class="glyphicon glyphicon-print"></span>&nbsp;0971-6666666</li>
                    <li><span class="glyphicon glyphicon-envelope"></span>&nbsp;webmaster@yahoo.com</li>
                    <li><span class="glyphicon glyphicon-globe"></span>&nbsp;www.xngfdy.com</li>
                </ul>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    <!-- //contact -->
    <!-- footer -->
    <div class="footer">
        <div class="container" style="text-align:center">
            <div style="float: left; margin-left:20%">
                <img src="@Url.Content("Image/binCode.png")" width="120" height="120"  alt="" />
                <div style="text-align:center; color:white; font-size:14px">公众号二维码</div>
            </div>
            <div style="float: left; margin-left:20px; padding-right:50px; border-right:1px solid white">
                <img  src="@Url.Content("Image/binCode.png")" width="120" height="120"  alt="" />
                <div style="text-align:center; color:white; font-size:14px">网站二维码</div>
            </div>
            <div style="float: left; width:500px; ">
            <p style="font-size:16px">Copyright &copy; 2016-2020 青海省警备司令部版权所有.</p>
                <p style="font-size:16px">地址：青海省西宁七一路.</p>
                <p style="font-size:16px">联系电话：0971-6666666.</p>
                <p style="font-size:16px">联系邮箱：webmaster@yahoo.com.</p>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
</body>
</html>
