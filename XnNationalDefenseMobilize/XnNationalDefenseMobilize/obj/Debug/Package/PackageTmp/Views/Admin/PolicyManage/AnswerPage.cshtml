@{
    ViewBag.Title = "常见问题";
    Layout = "~/Views/Shared/_backLayout.cshtml";
}

@using XnNationalDefenseMobilize.Models.PolycyAdvice
@model Message
<style>
    .modal-dialog {
        width: 1400px;
        height: 500px;
    }

    .top_img img {
        width: 100%;
    }

    .bottom_img img {
        width: 100%;
    }

    .text {
        width: 940px;
        padding: 3px;
        margin: auto;
        margin-top: 10px;
        margin-bottom: 10px;
        border: dashed 2px red;
        word-wrap: break-word;
        word-break: normal;
    }
</style>

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <ol class="breadcrumb">
            <li class="active">回复留言</li>
        </ol>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            基本信息
        </div>
        <div class="panel-body">
            <div class="col-md-6">
                <form class="form-horizontal" id="base_info">
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="question">标题</label>
                        <div class="col-md-6">
                            <input name="title" type="text" placeholder="标题" class="form-control" value="@Model.message_title">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="question">问题</label>
                        <div class="col-md-6">
                            <input name="question" type="text" placeholder="标题" class="form-control" value="@Model.message_content">
                        </div>
                    </div>
                    <input type="hidden" name="id" value="@Model.message_id"/>
                </form>
            </div>
        </div>
    </div>


    <div class="panel panel-default">
        <div class="panel-heading">
            内容编辑
        </div>
        <div class="panel-body">
            <textarea name="content" style="width: 100%; height: 800px; visibility: hidden; display: block;"></textarea>

            <input type="button" name="publish" value="回复" class="btn btn-primary" />
                <input type="button" name="preview" value="预览" class="btn btn-primary" data-toggle="modal" data-target="#preview"/>
                <input type="button" name="clear" value="清空" class="btn btn-primary" />
        </div>
    </div>
</div>



<!-- 预览窗口窗口 -->
<div class="modal fade" id="preview" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    ×
                </button>
                <h4 class="modal-title" id="addLinkLabel">预览页面
                </h4>
            </div>
            <div class="modal-body" id="modal-body">
                <div class="top_img">
                    <img src="@Url.Content("~/Image/news/top_img.jpg")"/>
                </div>
                <div class="text" id="text">
                </div>
                <div class="bottom_img">
                    <img src="@Url.Content("~/Image/news/bottom_img.jpg")"/>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    关闭
                </button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->


<script>
    var editor;
    KindEditor.ready(function (K) {
        editor = K.create('textarea[name="content"]', {
            newlineTag: "br",
            allowFileManager: true,
            uploadJson: '@Url.Content("~/editor/upload_json.ashx")',  //指定上传文件的服务器端程序。
            fileManagerJson: '@Url.Content("~/editor/file_manager_json.ashx")',  //指定浏览远程图片的服务器端程序。
            fontSizeTable: ['9px', '10px', '12px', '14px', '16px', '18px', '24px', '32px'],//指定文字大小。
            allowFileManager: true,
            afterCreate: function () {
                var self = this;
                K.ctrl(document, 13, function () {
                    self.sync();
                    K('form[name=example]')[0].submit();
                });
                K.ctrl(self.edit.doc, 13, function () {
                    self.sync();
                    K('form[name=example]')[0].submit();
                });
            }
        });

        //发布
        K('input[name=publish]').click(function (e) {
            var text = editor.html();

            while (text.indexOf("<") >= 0) {
                text = text.replace("<", "#lt;");
            }
            while (text.indexOf(">") >= 0) {
                text = text.replace(">", "#gt;");
            }

            var arr = jQuery("#base_info").serialize();
            arr = arr + "&text=" + text;

            jQuery.ajax({
                url: "@Url.Content("~/PolicyManage/ReplayMessage")",
                type: "POST",
                dataType: "text",
                data: arr,
                success: function (data) {
                    alert(data);
                    window.location.href = "@Url.Content("~/PolicyManage")";
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    alert(XMLHttpRequest.responseText);
                }
            });
        });

        //清空
        K('input[name=clear]').click(function (e) {
            editor.html('');
        });
    });

    
</script>




