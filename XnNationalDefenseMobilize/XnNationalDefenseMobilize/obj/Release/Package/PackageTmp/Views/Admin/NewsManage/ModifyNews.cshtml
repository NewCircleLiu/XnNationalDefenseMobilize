@{
    ViewBag.Title = "修改新闻";
    Layout = "~/Views/Shared/_backLayout.cshtml";
}
@using XnNationalDefenseMobilize.Models.News

@model  NewsInfo


<style>
    .modal-dialog {
        width: 1400px;
        height: 500px;
    }

    .top_img img {
        width: 100%;
    }

    .bottom_img img {
        width: 100%;
    }

    .text {
        width: 940px;
        padding: 3px;
        margin: auto;
        margin-top: 10px;
        margin-bottom: 10px;
        border: dashed 2px red;
        word-wrap: break-word;
        word-break: normal;
    }
</style>

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <ol class="breadcrumb">
            <li class="active">修改新闻</li>
        </ol>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            基本信息
        </div>
        <div class="panel-body">
            <div class="col-md-6">
                <form class="form-horizontal" id="base_info">
                    <fieldset>
                        <input type="hidden" name="id" value="@Model.news_id"/>
                        <div class="form-group">
                            <label class="col-md-3 control-label" for="name">标题</label>
                            <div class="col-md-6">
                                <input id="title" name="title" type="text" value="@Model.news_title" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label" for="email">作者</label>
                            <div class="col-md-6">
                                <input id="author" name="author" type="text" value="@Model.news_author" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label" for="email">来源</label>
                            <div class="col-md-6">
                                <input id="from" name="from" type="text" value="@Model.news_source" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label" for="email">分类</label>
                            <div class="col-md-6">
                                <select class="form-control" name="classify" >
                                    <option value="1">国际新闻</option>
                                    <option value="2">国内新闻</option>
                                    <option value="3">军事新闻</option>
                                    <option value="4">社会新闻</option>
                                    <option value="5">西宁新闻</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label" for="message">摘要</label>
                            <div class="col-md-9">
                                <textarea class="form-control" id="message" name="abstract" rows="5">@Model.news_abstract</textarea>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>


    <div class="panel panel-default">
        <div class="panel-heading">
            内容编辑
        </div>
        <div class="panel-body">

            <form name="text" action="@Url.Content("~/PreviewNews")" method="post">

                @{
                    String content = @Model.news_content.Replace("#lt;","<");
                    content = content.Replace("#gt;", ">");
                    }
                <textarea name="content" style="width: 100%; height: 800px; visibility: hidden; display: block;">@content</textarea>


                <input type="button" name="publish" value="确定修改" class="btn btn-primary" />
                <input type="button" name="back" value="返回" class="btn btn-primary" />
            </form>

        </div>
    </div>
</div>



<script>
    var editor;
    KindEditor.ready(function (K) {
        editor = K.create('textarea[name="content"]', {
            newlineTag: "br",
            allowFileManager: true,
            uploadJson: '@Url.Content("~/editor/upload_json.ashx")',  //指定上传文件的服务器端程序。
            fileManagerJson: '@Url.Content("~/editor/file_manager_json.ashx")',  //指定浏览远程图片的服务器端程序。
            fontSizeTable: ['9px', '10px', '12px', '14px', '16px', '18px', '24px', '32px'],//指定文字大小。
            allowFileManager: true,
            afterCreate: function () {
                var self = this;
                K.ctrl(document, 13, function () {
                    self.sync();
                    K('form[name=example]')[0].submit();
                });
                K.ctrl(self.edit.doc, 13, function () {
                    self.sync();
                    K('form[name=example]')[0].submit();
                });
            }
        });


        //确定修改
        K('input[name=publish]').click(function (e) {
            var text = editor.html();
            while (text.indexOf("<") >= 0) {
                text = text.replace("<", "#lt;");
            }
            while (text.indexOf(">") >= 0) {
                text = text.replace(">", "#gt;");
            }

            text = jQuery.param({"text":text});

            var title = jQuery("input[name='title']").val();
            var author = jQuery("input[name='author']").val();
            var from = jQuery("input[name='from']").val();
            var Newsabstract = jQuery("textarea[name='abstract']").val();
            if (title.length == 0 || author.length == 0 || from.length == 0 || Newsabstract.length == 0) {
                alert("请完整填写基本信息");
                return;
            }

            var arr = jQuery("#base_info").serialize();
            arr = arr + "&" + text;

            jQuery.ajax({
                url: "@Url.Content("~/NewsManage/ModifyNewsConfirm")",
                type: "POST",
                dataType: "html",
                data: arr,
                success: function (data) {
                    alert(data);
                    window.location.href = "@Url.Content("~/NewsManage")";
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    alert(XMLHttpRequest.responseText);
                }
            });
        });
    });

    //返回
    jQuery("input[name='back']").click(function () {
        window.location.href = "@Url.Content("~/NewsManage")";
    });
</script>




