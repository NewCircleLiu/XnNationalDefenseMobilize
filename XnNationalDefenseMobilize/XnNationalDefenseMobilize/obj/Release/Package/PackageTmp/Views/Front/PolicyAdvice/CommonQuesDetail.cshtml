@{
    ViewBag.Title = "留言回复";
}
@model XnNationalDefenseMobilize.Models.PolycyAdvice.CommonQues

<link href="@Url.Content("~/Content/pagecss/frontpagecss/polycyadvicecss/polycyadvice.css")" rel="stylesheet" type="text/css" media="all" />


<div id="outer_wrapper">
    <div id="contentsec">
        <div class="inner">
            <div class="twothird left">
                <div class="twothird box left">
                    <div class="blog">
                        <div class="post">
                            <div class="post-sec" style="padding: 0px 100px 0px 100px">
                                <div class="post-desc">
                                    <div id="right_title">
                                        @Model.question_content
                                    </div>
                                </div>
                                <div class="detail">
                                    @Html.Raw(Model.question_answer)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div style="clear: both; width: 0; height: 0"></div>
    </div>
</div>
